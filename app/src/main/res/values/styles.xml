<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="actionOverflowButtonStyle">@style/FlowButtonStyle</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/actionBarText</item>
    </style>

    <style name="FlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/actionBarText</item>
    </style>

    <!--<style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextStyle">@color/actionBarText</item>
    </style>

    <style name="PopupOverlay" parent="Base.Theme.AppCompat.Light" >
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextStyle">@color/actionBarText</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">#6dc4c4</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>



</resources>
